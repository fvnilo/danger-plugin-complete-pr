{
  "name": "danger-plugin-complete-pr",
  "description": "A Danger plugin to verify the completion of a pull request.",
  "author": {
    "name": "Ny Fanilo Andrianjafy",
    "email": "ny.fanilo@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nylo-andry/danger-plugin-complete-pr.git"
  },
  "bugs": {
    "url": "https://github.com/nylo-andry/danger-plugin-complete-pr/issues"
  },
  "homepage": "https://github.com/nylo-andry/danger-plugin-complete-pr#readme",
  "keywords": [
    "danger",
    "danger-plugin",
    "github",
    "pull-request"
  ],
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "build": "tsc",
    "test": "jest",
    "predocs": "rm -rf docs/",
    "docs": "esdoc -c .esdoc.json",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release",
    "prettier": "prettier",
    "prettier-write": "npm run prettier -- --parser typescript --no-semi --trailing-comma es5 --write --print-width 120",
    "prettier-project": "npm run prettier-write -- 'src/**/*.{ts,tsx}'",
    "lint": "tslint \"src/**/*.ts\""
  },
  "license": "MIT",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "danger": "*",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "prettier": "^1.3.1",
    "semantic-release": "^17.2.3",
    "ts-jest": "^22.0.1",
    "tslint": "^5.4.3",
    "typescript": "^2.3.2",
    "validate-commit-msg": "^2.12.1"
  },
  "optionalDependencies": {
    "esdoc": "^1.0.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "tslint --fix",
      "npm run prettier-write --",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ]
  },
  "dependencies": {
    "yarn": "^1.3.2"
  }
}
